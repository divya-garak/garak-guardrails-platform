# Llama Guard Service Dockerfile
FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    gcc \
    g++ \
    python3-dev \
    wget \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install vLLM and required dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    vllm==0.8.5 \
    fastapi \
    uvicorn \
    pydantic \
    typer

# Copy Llama Guard server implementation
COPY docker-services/llamaguard_server.py .

# Create cache directory for models
RUN mkdir -p /root/.cache/huggingface

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Start the Llama Guard server
CMD ["python", "llamaguard_server.py", "--port", "8001"]