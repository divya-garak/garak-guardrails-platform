# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Configuration  
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_API_KEY=your-gcp-api-key

# Kubernetes Configuration
CLUSTER_NAME=nemo-guardrails-cluster
NAMESPACE=production

# Security Configuration
REDIS_PASSWORD=generate-secure-password-here
GRAFANA_ADMIN_PASSWORD=generate-secure-password-here
ADMIN_PASSWORD=generate-secure-admin-password

# Monitoring
ENABLE_MONITORING=true
ENABLE_LOGGING=true
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# API Configuration
API_DOMAIN=api.yourdomain.com
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Docker Registry
DOCKER_REGISTRY=gcr.io/your-project-id

# Feature Flags
ENABLE_JAILBREAK_CHECK=true
ENABLE_FACTCHECK=true
ENABLE_HALLUCINATION_CHECK=true
ENABLE_CONTENT_SAFETY=true
